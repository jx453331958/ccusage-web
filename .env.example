# Database
DATABASE_PATH=./data/ccusage.db

# JWT Secret (change this in production!)
JWT_SECRET=your-secret-key-change-this-in-production

# Admin credentials (used on first run to create admin account)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Server
# External port (host machine) - modify this to change which port the server listens on
# Example: PORT=3460 will make the server accessible at http://localhost:3460
PORT=3000

# Cookie security (set to true only if using HTTPS)
COOKIE_SECURE=false
